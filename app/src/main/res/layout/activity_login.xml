<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context="derkaoui.coms.facebook.myphotos.LoginActivity">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="287dp"
        android:layout_height="70dp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="134dp"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:id="@+id/appnameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:text="My Photos "
        android:textAlignment="center"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textSize="90px" />

    <Button
        android:id="@+id/gotoalbumsButton"
        style="@style/com_facebook_button"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appnameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:text="     Go to my albums    "
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/by_textView"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/by_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login_button"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="13dp"
        android:text="@string/byMohamedDer"
        android:textColor="@color/cardview_light_background"
        android:typeface="sans" />


</RelativeLayout>
