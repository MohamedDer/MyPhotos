<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:columnCount="2"
    tools:context="derkaoui.coms.facebook.myphotos.login.LoginActivity">


    <TextView
        android:id="@+id/appnameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/myphotos"
        android:textAlignment="center"
        android:textColor="@color/com_facebook_button_background_color_focused"
        android:textSize="50sp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="287dp"
        android:layout_height="70dp"
        android:layout_above="@+id/imageView"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/gotoalbumsButton"
        style="@style/com_facebook_button"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:text="@string/gotoalbums"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/by_textView"
        android:layout_columnSpan="2"
        android:layout_gravity="bottom|center"
        android:layout_row="6"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/byMohamedDer"
        android:textColor="@color/cardview_light_background"
        android:typeface="sans" />


</GridLayout>
